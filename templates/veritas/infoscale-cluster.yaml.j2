apiVersion: infoscale.veritas.com/v1
kind: InfoScaleCluster
metadata:
  name: infoscalecluster-dev
  namespace: infoscale-vtas
spec:
  encrypted: false
  sameEncKey: false
  enableScsi3pr: true
  isSharedStorage: true
  version: 9.1.0
  clusterInfo:
{% for node in worker_nodes_name_list %}
    - nodeName: {{ node }}
{% if boot_disk_by_path | length > 0 %}
      excludeDevice:
        - "{{ boot_disk_by_path }}"
{% endif %}
{% endfor %}