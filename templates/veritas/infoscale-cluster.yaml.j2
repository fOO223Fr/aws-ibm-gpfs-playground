apiVersion: infoscale.veritas.com/v1
kind: InfoScaleCluster
metadata:
  name: infoscalecluster-dev
  namespace: infoscale-vtas
spec:
  encrypted: false
  sameEncKey: false
  enableScsi3pr: true
  isSharedStorage: true
  version: 9.1.0
  clusterInfo:
    - nodeName: {{ worker_nodes_name_list[0] }}
{% if infoscale_include_devices is defined and infoscale_include_devices | length > 0 %}
      includeDevices:
{% for device in infoscale_include_devices %}
        - "{{ device }}"
{% endfor %}
{% endif %}
{% for node in worker_nodes_name_list[1:] %}
    - nodeName: {{ node }}
{% endfor %}